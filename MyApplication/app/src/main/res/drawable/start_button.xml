<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/primary_button"/>
            <corners android:radius="25dp"/>
            <gradient android:angle="180" android:endColor="#7fffa4" android:startColor="@color/teal_700" />
        </shape>
    </item>
    <item android:drawable="@drawable/disabled_button" android:state_enabled="false"/>
    <item android:drawable="@drawable/enabled_button"/>
</selector>